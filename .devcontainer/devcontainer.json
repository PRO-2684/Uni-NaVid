// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "Uni-NaVid Dev Container",
	"build": {
		// Sets the run context to one level up instead of the .devcontainer folder.
		"context": "..",
		// Update the 'dockerFile' property if you aren't using the standard 'Dockerfile' filename.
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		// Enable GPU support & limit to 2 GPUs
		"--gpus",
		"2", // Adjust to fit your needs
		// Increase shared memory size for PyTorch DataLoader
		"--shm-size=16gb",
		// Set IPC mode for better multi-process communication
		"--ipc=host"
	],
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"configureZshAsDefaultShell": true,
			"installOhMyZsh": true,
			"installOhMyZshConfig": true,
			"upgradePackages": true,
			"username": "automatic",
			"userUid": "automatic",
			"userGid": "automatic"
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		// 7860 // Gradio default port
	],
	// Install dependencies after container is created
	"postCreateCommand": "bash -c 'source /opt/conda/etc/profile.d/conda.sh && conda activate uninavid && pip config set global.index-url https://mirrors.tuna.tsinghua.edu.cn/pypi/web/simple && pip install --upgrade pip && pip install -e . && pip install flash-attn==2.5.9.post1 --no-build-isolation'",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.black-formatter", // Black Formatter
				"ms-python.isort", // isort
				"ms-python.vscode-pylance", // Pylance
				"ms-python.python", // Python
				"ms-python.debugpy" // Python Debugger
			]
		}
	},
	// Uncomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "vscode"
}
